# Medi-AI Suite Environment Configuration
# Simple configuration without external API dependencies

# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///medi_ai_suite.db

# CORS Configuration (allowed frontend origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8081

# Optional: External AI Chat Service
# Set this if you want to integrate an external AI chat API
AI_CHAT_URL=

# Optional: Google Maps API
# Set this if you want location services (nearby hospitals/pharmacies)
GOOGLE_MAPS_API_KEY=

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/medi-ai-suite.log

# Development
DEBUG=True
TESTING=False
